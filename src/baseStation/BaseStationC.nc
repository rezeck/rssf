#include <Timer.h>
#include "BaseStation.h"
/************************************************************/

module BaseStationC {
	uses interface Boot;
	uses interface Leds;
	uses interface Timer<TMilli> as Timer0;
}
implementation {
/*********************************************************
Variables
*********************************************************/
bool busy = FALSE;
/*********************************************************/

/*********************************************************
Boot event init
*********************************************************/
event void Boot.booted() {
	//call AMControl.start();
	call Timer0.startPeriodic(TIMER_PERIOD_MILLI);
}
/*********************************************************/

/*********************************************************
Timer0 event fired
*********************************************************/
event void Timer0.fired() {
	call Leds.led0On();
}
/*********************************************************/
}
/************************************************************
END OF CODE
